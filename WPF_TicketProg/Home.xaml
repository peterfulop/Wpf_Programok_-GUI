<Page x:Class="WPF_TicketProg.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_TicketProg"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Grid Background="Azure">
        <StackPanel VerticalAlignment="Center" x:Name="Home_Stack" MaxWidth="1000">
            <Button x:Name="menu_1_btn" DataContext="1" Height="80" Content="Menu 1" Margin="20" FontSize="20" FontWeight="Bold" Click="menu_1_btn_Click"></Button>
            <Button x:Name="menu_2_btn" DataContext="2" Height="80" Content="Menu 2*" Margin="20" FontSize="20" FontWeight="Bold" Click="menu_2_btn_Click"></Button>
            <Button x:Name="menu_3_btn" DataContext="3" Height="80" Content="Menu 3" Margin="20" FontSize="20" FontWeight="Bold" Click="menu_3_btn_Click"></Button>
        </StackPanel>
    </Grid>
    
</Page>
