<Window x:Class="WPF_TicketProg.Ticket"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_TicketProg"
        mc:Ignorable="d"
        Title="Ticket" Height="400" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">
    
    <Grid Background="#FFFFBE31" MouseLeftButtonDown="Grid_MouseLeftButtonDown">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Sorszam" x:Name="Label_MyNumber" HorizontalAlignment="Center" FontWeight="Bold" FontSize="32"></Label>
            <Label Content="Datum" x:Name="Label_Date" HorizontalAlignment="Center" FontWeight="Bold" FontSize="22" Foreground="White"></Label>
        </StackPanel>
        <Button
            x:Name="Ticket_Close_Btn"
            VerticalAlignment="Bottom"
            Height="50" Width="200"
            FontSize="20"
            Margin="20"
           
            Content="close"
            Background="{x:Null}"
            BorderBrush="DarkGray"
            Foreground="DarkGray" Click="Ticket_Close_Btn_Click">
            
        </Button>
    </Grid>
    
</Window>
