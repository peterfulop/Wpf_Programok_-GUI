<Page x:Class="WPF_MENU_ABLAKOK.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_MENU_ABLAKOK"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid Background="DimGray">


        <StackPanel Width="300" Margin="0 100 0 0">

            <Label FontSize="14" Content="Username" Foreground="White" FontFamily="Roboto"></Label>
            <TextBox FontSize="16" Padding="5"></TextBox>

            <Label FontSize="14" Content="Email" Foreground="White"></Label>
            <TextBox FontSize="16" Padding="5"></TextBox>

            <Label FontSize="14" Content="Password" Foreground="White"></Label>
            <TextBox FontSize="16" Padding="5"></TextBox>


        </StackPanel>
        
    </Grid>
</Page>
